<p>
  Heads up <%= @user.name.split(" ").first %>!
</p>

<% if @week_ofs.any? %>
  <% @week_ofs.each do |friend| %>
    <p>
      <%= link_to "#{friend.name}'s", friend.facebook_link %> birthday is one week from now on <%= friend.show_birthday %>.
    </p>
  <% end %>
<% end %>


<% if @day_ofs.any? %>
  <% @day_ofs.each do |friend| %>
    <p>
      <%= link_to "#{friend.name}'s", friend.facebook_link %> birthday is today!
    </p>
  <% end %>
<% end %>

<p>
  - Goodbye
</p>
